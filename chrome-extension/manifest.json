{
  "manifest_version": 2,

  "name": "Moira",
  "description": "A browser plug-in that displays information from Integral tags on live web pages.",
  "version": "1.0",
  "content_scripts" : [{
    "matches":["http://*/*","https://*/*"],
    "css":[
      "content-scripts/css/main.css"
    ],
    "js":[
      "content-scripts/js/Bootstrapper.js",
      "content-scripts/js/bundle.js"
    ]
  }],
  "browser_action": {
    "default_icon": "browser-action/img/ias-logo.png",
    "default_popup": "browser-action/index.html"
  },
  "background": {
    "scripts": [
      "background/js/bundle.js"
    ]
  },
  "permissions": [
    "activeTab",
    "proxy",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
