{
  "manifest_version": 2,

  "name": "Moira â€“ The Tag Doctor",
  "description": "A browser plug-in that displays information from Integral tags on live web pages.",
  "version": "1.0",
  "content_scripts" : [{
    "matches":["http://*/*","https://*/*"],
    "css":[
      "content-scripts/css/main.css"
    ],
    "js":[
      "content-scripts/js/Bootstrapper.js",
